<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/activity_produtos_item_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintTop_toBottomOf="parent"
        tools:text = "Salada de Frutas"
        android:layout_margin="16dp"
        />

    <TextView
        android:id = "@+id/activity_produtos_item_descricao"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/activity_produtos_item_name"
        tools:text = "Banana"
        android:layout_marginStart="16dp"

        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/activity_produtos_item_valor"
        tools:text = "15.30"
        app:layout_constraintTop_toBottomOf="@+id/activity_produtos_item_descricao"
        android:layout_marginStart="16dp" />


</androidx.constraintlayout.widget.ConstraintLayout>